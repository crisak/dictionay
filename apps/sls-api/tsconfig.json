{
  "extends": "@repo/typescript-config/back-api.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/schemas/*": ["../../packages/schemas/src/*.ts"],
      "@repo/schemas": ["../../packages/schemas/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": [
    "serverless.ts",
    "src/*.ts",
    "src/**/*.ts",
    "__tests__/*.ts",
    "__tests__/**/*.ts"
  ]
}
